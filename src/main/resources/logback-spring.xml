<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="60 seconds">

    <property name="APP_NAME" value="${spring.application.name:-demo-mdc}"/>
    <property name="ENV" value="${SPRING_PROFILES_ACTIVE:-dev}"/>
    <property name="LOG_PATH" value="${LOG_PATH:-./logs}"/>
    <property name="MAX_FILE_SIZE" value="${MAX_FILE_SIZE:-100MB}"/>
    <property name="MAX_HISTORY" value="${MAX_HISTORY:-14}"/>

    <property name="CONSOLE_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} | traceId=%X{traceId:-} userId=%X{userId:-} - %msg%n"/>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_PATTERN}</pattern>
        </encoder>
    </appender>

    <appender name="FILE_JSON" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/${APP_NAME}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/archive/${APP_NAME}.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>${MAX_FILE_SIZE}</maxFileSize>
            <maxHistory>${MAX_HISTORY}</maxHistory>
        </rollingPolicy>
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <timestamp/>                <!-- @timestamp -->
                <version/>                  <!-- event schema version -->
                <logLevel/>                 <!-- level -->
                <loggerName/>               <!-- logger -->
                <threadName/>               <!-- thread -->
                <message/>                  <!-- 自动 JSON 转义后的 message -->
                <mdc/>                      <!-- 把 MDC 全量输出为对象 -->
                <!-- 也可只加一些固定字段（app/env/traceId/userId）-->
                <pattern>
                    <pattern>
                        { "app":"${APP_NAME}", "env":"${ENV}",
                        "traceId":"%X{traceId}", "userId":"%X{userId}" }
                    </pattern>
                </pattern>
                <stackTrace>                <!-- 堆栈优化可选 -->
                    <throwableConverter class="net.logstash.logback.stacktrace.ShortenedThrowableConverter">
                        <maxDepthPerThrowable>50</maxDepthPerThrowable>
                        <maxLength>8192</maxLength>
                        <rootCauseFirst>true</rootCauseFirst>
                    </throwableConverter>
                </stackTrace>
            </providers>
        </encoder>

    </appender>

    <appender name="ASYNC_CONSOLE" class="ch.qos.logback.classic.AsyncAppender">
        <queueSize>8192</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <neverBlock>true</neverBlock>
        <appender-ref ref="CONSOLE"/>
    </appender>

    <appender name="ASYNC_FILE_JSON" class="ch.qos.logback.classic.AsyncAppender">
        <queueSize>32768</queueSize>
        <discardingThreshold>20</discardingThreshold>
        <neverBlock>true</neverBlock>
        <appender-ref ref="FILE_JSON"/>
    </appender>

    <logger name="org.springframework" level="INFO"/>
    <logger name="org.hibernate.SQL" level="WARN"/>
    <logger name="com.example.mdc" level="INFO"/>

    <root level="INFO">
        <appender-ref ref="ASYNC_CONSOLE"/>
        <appender-ref ref="ASYNC_FILE_JSON"/>
    </root>
</configuration>
